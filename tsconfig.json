{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2019",
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["es2015", "es2017", "es2018", "es2019", "dom"],
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "removeComments": false,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "allowUnreachableCode": false,
    "strict": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "types": [],
    "incremental": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "transform": "./.storybook/typescript-transform.ts"
      }
    ]
  },
  "ts-node": {
    "transpileOnly": true,
    "module": "commonjs"
  },
  "exclude": [
    "cypress",
    "node_modules",
    "modules/**/dist/*",
    "modules/**/ts-tmp/*",
    "docs",
    "utils/**/spec/*",
    "modules/**/spec/*",
    "modules/**/stories/*",
    "jest/**/*"
  ]
}
